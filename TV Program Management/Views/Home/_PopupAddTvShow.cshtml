@model TvShowModel


<div class="modal fade" id="popUp_Add" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Enter TV show information</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                
                <form asp-controller="TVShows" asp-action="AddTvShow" enctype="multipart/form-data">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label for="inputName">Tilte<span style="color: red">*</span></label>
                        <input type="text" class="form-control" id="inputName" placeholder="munimum 3 character" asp-for="Title">
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="ReleassDate">Releass Date<span style="color: red">*</span></label>
                        <input type="date" class="form-control" id="ReleassDate" placeholder="Enter the releass date" asp-for="ReleassDate">
                        <span asp-validation-for="ReleassDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="Rating">Rating<span style="color: red">*</span></label>
                        <input type="number" class="form-control" id="Rating" placeholder="Rating must be between 0 and 100" step="0.1" min="0" max="10" asp-for="Rating">
                        <span asp-validation-for="Rating" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="Url">URL<span style="color: red">*</span></label>
                        <input type="url" class="form-control" id="Url" placeholder="Enter the url" asp-for="URL">
                        <span asp-validation-for="URL" class="text-danger"></span>
                    </div>

                    <div class="form-row">
                        <div class="col-12">
                            <label for="languageInput">Languages<span style="color: red">*</span></label>
                        </div>
                    </div>
                    <div class="form-row align-items-center">
                        <div class="form-group col-md-2">
                            <button type="button" id="addLanguageBtn" class="btn btn-primary">Add</button>
                        </div>
                        <div class="form-group col-md-4">
                            <input type="text" class="form-control" id="languageInput" placeholder="Enter a language" />
                        </div>
                        <div class="form-group col-md-6">
                            <select id="languagesDropdown" class="form-control" asp-for="Languages" size="2">
                                <!-- سيتم إضافة اللغات الجديدة هنا -->
                            </select>
                            <span asp-validation-for="Languages" class="text-danger" id="languageError"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="image">Select Image<span style="color: red">*</span></label>
                        <input type="file" asp-for="Image" class="form-control" id="image" />
                        <span asp-validation-for="Image" class="text-danger"></span>
                    </div>
                    <div class="modal-footer">
                        <button type="reset" class="btn btn-danger">Reset</button>
                        <button type="submit" class="btn btn-primary" id="btn_reset">Add</button>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>
