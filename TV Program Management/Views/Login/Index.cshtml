@model LoginModel

@section btn_Register {
    <a class="btn btn-outline-light" href="/Register">Register</a>
}


@* عرض رسالة فشل تسجيل الدخول *@
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger" id="errorMessage">
        @TempData["Error"]
    </div>
}


<section class="vh-100 gradient-custom">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card bg-dark text-white" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">

                        <div class="mb-md-5 mt-md-4 pb-5">

                            <h2 class="fw-bold mb-2 text-uppercase">Login</h2>
                            <p class="text-white-50 mb-5">Please enter your login and password!</p>

                            <form asp-controller="Login" asp-action="login">
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div data-mdb-input-init class="form-outline form-white mb-4">
                                    <label class="form-label" for="typeEmailX">Email</label>
                                    <input type="email" id="typeEmailX" class="form-control form-control-lg" placeholder="Enter your email" asp-for="Email"/>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>

                                <div data-mdb-input-init class="form-outline form-white mb-4">
                                    <label class="form-label" for="typePasswordX">Password</label>
                                    <input type="password" id="typePasswordX" class="form-control form-control-lg" placeholder="Enter your password" asp-for="Password" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>

                                <button data-mdb-button-init data-mdb-ripple-init class="btn btn-outline-light btn-lg px-5" type="submit" value="Login">Login</button>

                                @if (ViewBag.LoginError is not null)
                                {
                                    <div class="text-danger mt-3">
                                        @ViewBag.LoginError
                                    </div>
                                }
                            </form>

                        </div>

                        <div>
                            <p class="mb-0">
                                Don't have an account? <a href="/register" class="text-white-50 fw-bold">Sign Up</a>
                            </p>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>